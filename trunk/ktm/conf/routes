# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /api                                   REST.index

# tournaments and subresources
GET    /api/tournaments                          REST.Tournament.index
POST   /api/tournaments                          REST.Tournament.create
GET    /api/tournaments/{<[0-9]+>id}             REST.Tournament.show
GET    /api/tournaments/{<[0-9]+>id}/categories  REST.Tournament.categories

# categories and subresources
GET    /api/categories                           REST.Category.index
POST   /api/categories                           REST.Category.create
GET    /api/categories/{<[0-9]+>id}              REST.Category.show
GET    /api/categories/{<[0-9]+>id}/fighters     REST.Category.fighters
GET    /api/categories/{<[0-9]+>id}/rounds       REST.Category.rounds

# brackets and subresources
GET    /api/brackets                             REST.Bracket.index
POST   /api/brackets                             REST.Bracket.create
GET    /api/brackets/{<[0-9]+>id}                REST.Bracket.show

# round and subresources
GET    /api/rounds                               REST.Round.index
GET    /api/rounds/{<[0-9]+>id}                  REST.Round.show
GET    /api/rounds/{<[0-9]+>id}/brackets         REST.Round.brackets

# fighters and subresources
GET    /api/fighters                             REST.Fighter.index
GET    /api/fighters/{<[0-9]+>id}                REST.Fighter.show

# fight and subresources
GET    /api/fights                               REST.Fight.index
GET    /api/fights/{<[0-9]+>id}                  REST.Fight.show

# result and subresources
GET    /api/results                              REST.Result.index
GET    /api/results/{<[0-9]+>id}                 REST.Result.show



# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
